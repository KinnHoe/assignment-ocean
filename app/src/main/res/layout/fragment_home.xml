<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First Image and TextView Wrapper -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">


                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="758dp"
                    android:src="@drawable/spongebobb" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="352dp"
                    android:layout_height="396dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/thebomb"
                    android:text="Welcome To Marine Life"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="34sp" />

            </FrameLayout>

            <!-- Second Image and Button Wrapper -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="748dp"
                        android:src="@drawable/oceanlife" />
                    <Button
                        android:id="@+id/textDes"
                        android:layout_width="378dp"
                        android:layout_height="347dp"
                        android:layout_gravity="center"


                        android:fontFamily="@font/pacificoregular"
                        android:text="Diverse marine creatures for you to EXPLORE"
                        android:textAlignment="center"
                        android:backgroundTint="#80FFFFFF"
                        android:textColor="@color/white"
                        android:textSize="34sp" />

                    <Button
                        android:id="@+id/buttonLearnMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="300dp"
                        android:text="LEARN MORE"
                        android:textColor="@android:color/black"
                        android:background="#80FFFFFF"
                        android:fontFamily="@font/pacificoregular"/>

                </FrameLayout>

            </LinearLayout>

            <!-- Third Image -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="500dp"
                        android:layout_height="800dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/underwaterevent" />


                </FrameLayout>

                <Button
                    android:id="@+id/buttonDesE"
                    android:layout_width="372dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"

                    android:backgroundTint="#E1E7FC"
                    android:fontFamily="@font/pacificoregular"
                    android:text="A plethora of further exhilarating events await your gracious participation."
                    android:textColor="@color/royal_blue"
                    android:textSize="24sp" />


                <Button
                    android:id="@+id/buttonJoinUs"
                    android:layout_width="389dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/eventCardView"
                    android:fontFamily="@font/baloo"
                    android:text="JOIN US NOW"
                    android:textColor="#1F2E62"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <!-- Fourth Image -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView2www"
                    android:layout_width="392dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="100dp"
                    android:fontFamily="@font/pacificoregular"
                    android:text="CUSTOMER'S GALLERY"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="24sp" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">


                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="524dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img" />


                </FrameLayout>

                <TextView
                    android:id="@+id/textViewwww"
                    android:layout_width="392dp"
                    android:layout_height="173dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/pacificoregular"
                    android:text="Experience the wonders of exquisite marine animals"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="34sp" />




            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
